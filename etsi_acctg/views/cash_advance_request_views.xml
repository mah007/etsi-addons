<odoo>
    <data>
    <!-- cash advance request tree view -->
        <record model="ir.ui.view" id="cash_advance_request_tree_view">
            <field name="name">cash.advance.request.tree.view</field>
            <field name="model">cash.advance.request</field>
            <field name="arch" type="xml">

                <tree>
                   <field name = "employee_requested_id"/>
                    <field name = "dept_id"/>
                    <field name = "job_position_id"/>
                    <field name = "cash_amount"/>
                </tree>
            </field>
        </record>

        <!-- cash advance request form view-->
        <record model="ir.ui.view" id="cash_advance_request_form_view">
            <field name="name">cash.advance.request.form.view</field>
            <field name="model">cash.advance.request</field>
            <field name="arch" type="xml">

                <form>
                    <header>
                        <button name="action_draft" type="object" string="Send to draft" states="confirmed,approved"/>
                        <button name="action_confirm" type="object" string="Confirm" states="draft" class="oe_highlight"/>
                        <button name="action_approve" type="object" string="Mark as Approve" states="confirmed" class="oe_highlight"/>
                        <field name="state" widget="statusbar"/>
                    </header>

                    <sheet>
                        <group>
                            <group>

                                <field name = "employee_requested_id"/>
                                <field name = "dept_id"/>
                                <field name = "job_position_id"/>
                                <field name = "cash_amount"/>
                            </group>

                            <group>
                                <field name = "date_requested"/>
                            </group>
                        </group>

                        <notebook>
                            <page string = "Reason">
                                <field name="reason"/>
                            </page>

                            <page string="Items">
                                <field name="lines_ids">
                                    <tree editable = "bottom">
                                        <field name = "product_id" required = "1"/>
                                        <field name="quantity" on_change="on_change_total(quantity,cost)"/>
		                                <field name="cost" on_change="on_change_total(quantity,cost)"/>
                                        <field name = "totalCost" sum = "total"/>
                                    </tree>
                                </field>
                            </page>
                        </notebook>
                    </sheet>
                </form>

            </field>
        </record>

        <!--cash advance request action-->
        <record model="ir.actions.act_window" id="cash_advance_request_action">
            <field name="name">Cash Advance Request</field>
            <field name="res_model">cash.advance.request</field>
            <field name="view_type">form</field>
            <field name="view_mode">tree,form</field>
            <field name = "help" type = "html">
                <p class = "os_view_nocontent_create"> Create your first cash advance request
                </p>
            </field>
        </record>

        <menuitem
            id = "cash_advance_request_menu"
            name = "Cash advance Request"
            action = "cash_advance_request_action"
            parent = "request_menu"
        />

    </data>
</odoo>