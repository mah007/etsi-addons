<odoo>
    <data>

        <record model="ir.ui.view" id="asset_config_tree_view">
            <field name="name">asset.config.tree.view</field>
            <field name="model">asset.config</field>
            <field name="arch" type="xml">
                <tree>
                    <field name="serial_num"/>
                    <field name="asset_name"/>
                    <field name="asset_model"/>
                    <field name="year"/>
                    <field name="asset_condition"/>
                    <field name="quantity"/>
                </tree>
            </field>
        </record>

        <record model="ir.ui.view" id="asset_config_form_view">
            <field name="name">asset_config.form.view</field>
            <field name="model">asset.config</field>
            <field name="arch" type="xml">
                <form>
                    <sheet>
                        <group>
                            <group>
                                <field name="serial_num"/>
                            </group>
                        </group>
                        <group string="Asset">
                            <group>
                                <field name="asset_name"/>
                                <field name="asset_model"/>
                            </group>
                            <group>
                                <field name="year"/>
                                <field name="asset_condition"/>
                                <field name="quantity"/>
                            </group>
                        </group>
                    </sheet>
                </form>
            </field>
        </record>

        <record model="ir.ui.view" id="asset_config_search_view">
            <field name="name">asset_config.search.view</field>
            <field name="model">asset.config</field>
            <field name="arch" type="xml">
                <search>
                    <field name="serial_num"/>
                    <field name="asset_name"/>
                    <field name="asset_model"/>
                    <field name="year"/>
                    <field name="asset_condition"/>
                    <field name="quantity"/>
                </search>
            </field>
        </record>

        <record model="ir.actions.act_window" id="asset_config_action">
          <field name="name">Asset</field>
          <field name="res_model">asset.config</field>
          <field name="view_type">form</field>
          <field name="view_mode">tree,form,search</field>
            <field name="help" type="html">
                <p class="oe_view_nocomment_create">Create Asset</p>
            </field>
        </record>

        <menuitem
            id = "asset_config_main_menu"
            name = "Asset Configuration"
            parent = "asset_mngt_main_menu"
            />

        <menuitem
            id = "asset_config_menu"
            name = "Asset"
            parent = "asset_config_main_menu"
            action = "asset_config_action"
            />

    </data>
</odoo>