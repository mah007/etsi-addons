<odoo>
    <data>

        <menuitem
            id = "asset_mngt_main_menu"
            name = "Asset Management"
            />

        <!--Hand over tree view-->
        <record model="ir.ui.view" id="handover_tree_view">
            <field name="name">handover.tree.view</field>
            <field name="model">asset.management.handover</field>
            <field name="arch" type="xml">

                <tree>
                    <field name = "date"/>
                    <field name = "emp_id"/>
                    <field name = "company_id"/>
                    <field name = "source_loc"/>
                    <field name = "destination_loc"/>
                    <field name = "custodian_id"/>
                    <field name = "processed_by"/>
                    <field name = "state"/>
                </tree>
            </field>
        </record>


        <!--Hand over form view-->
        <record model="ir.ui.view" id="handover_form_view">
            <field name="name">handover.form.view</field>
            <field name="model">asset.management.handover</field>
            <field name="arch" type="xml">
                <form>
                    <header>
                        <button name="button_print" string="Print" type="object"/>
                        <button name="button_transfer" string="Transfer" type="object" state="cancel"/>
                        <button name="button_email" string="Send by mail" type="object"/>
                        <button name="button_cancel" string="Cancel" type="object"/>
                        <field name="state" widget="statusbar"/>
                    </header>
                    <sheet>
                        <group>
                            <group>
                                <field name="company_id" placeholder="Company name" domain="[('is_company','=',True)]"/>
                                <field name="emp_id" placeholder="Employee's Name"/>
                                <field name="emp_email"/>
                                <field name="source_loc"/>
                                <field name="destination_loc"/>
                            </group>
                            <group>
                                <field name="date"/>
                                <field name="transfer_type"/>
                                <field name="custodian_id"/>
                                <field name="processed_by"/>
                                <field name="internal_trans"/>
                            </group>

                            <field name="config_ids">
                                <tree editable="bottom">
                                    <field name="serial_num"/>
                                    <field name="asset_id"/>
                                    <field name="model"/>
                                    <field name="asset_year"/>
                                    <field name="condition"/>
                                    <field name="quantity"/>
                                </tree>
                            </field>
                        </group>
                    </sheet>
                </form>
            </field>
        </record>

        <!--Handover search-->
        <record model="ir.ui.view" id="asset_handover_search_view">
            <field name="name">asset.handover.search.view</field>
            <field name="model">asset.management.handover</field>
            <field name="arch" type="xml">
                <search>
                    <field name = "emp_id"/>
                    <field name = "company_id"/>
                </search>
            </field>
        </record>


        <!--Handover action-->
        <record model="ir.actions.act_window" id="handover_action">
            <field name="name">Handover</field>
            <field name="res_model">asset.management.handover</field>
            <field name="view_type">form</field>
            <field name="view_mode">tree,form,search</field>
            <field name="help" type="html">
                <p class="oe_view_nocomment_create">Create your first handover</p>
            </field>
        </record>

        <menuitem
            id = "asset_mngt_menu"
            name = "Asset Management"
            parent = "asset_mngt_main_menu"
            />

        <menuitem
            id = "asset_handover_menu"
            name = "Asset Handover"
            parent = "asset_mngt_menu"
            action = "handover_action"
            />

    </data>
</odoo>