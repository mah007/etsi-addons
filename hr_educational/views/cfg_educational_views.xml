<odoo>
  <data>
    <record id = "educ_fos_form_view" model = "ir.ui.view">
      <field name = "name">educ.fos.form.view</field>
      <field name = "model">educ.fields.study</field>
      <field name = "arch" type = "xml">
        <form>
          <sheet>
            <group string = "Fields of Study">
              <field name = "name"/>
              <field name = "description"/>
            </group>
          </sheet>
        </form>
      </field>
    </record>

    <record id = "educ_fos_tree_view" model = "ir.ui.view">
      <field name = "name">educ.fos.tree.view</field>
      <field name = "model">educ.fields.study</field>
      <field name = "arch" type = "xml">
        <tree string = "Fields of Study">
          <field name = "name"/>
          <field name = "description"/>
        </tree>
      </field>
    </record>

    <record model="ir.ui.view" id="educ_fos_search_view">
      <field name="name">educ.fos.search.view</field>
      <field name="model">educ.fields.study</field>
      <field name="arch" type="xml">
        <search>
          <field name = "name"/>
          <field name = "description"/>
        </search>
      </field>
    </record>

    <record model="ir.actions.act_window" id="educ_fos_action">
      <field name="name">Fields of Study</field>
      <field name="res_model">educ.fields.study</field>
      <field name="view_type">form</field>
      <field name="view_mode">tree,form,search</field>

    </record>


    <menuitem
            id = "educ_fos_menu"
            name = "Fields of Study"
            action = "educ_fos_action"
            parent = "hr.menu_human_resources_configuration"
    />
  </data>
</odoo>